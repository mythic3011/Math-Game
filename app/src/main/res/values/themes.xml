<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.MathGame" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/cloudflare_orange</item>
        <item name="colorPrimaryVariant">@color/cloudflare_dark_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/cloudflare_blue</item>
        <item name="colorSecondaryVariant">@color/cloudflare_dark_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
    </style>

    <!-- Light Theme -->
    <style name="Theme.MathGame.Light" parent="Theme.MathGame">
        <item name="android:windowBackground">@color/light_background</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textColorSecondary">@color/gray_text</item>
        <item name="buttonStyle">@style/Widget.MathGame.Button.Light</item>
    </style>

    <!-- Dark Theme -->
    <style name="Theme.MathGame.Dark" parent="Theme.MathGame">
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:textColor">@color/light_text</item>
        <item name="android:textColorSecondary">@color/light_gray_text</item>
        <item name="buttonStyle">@style/Widget.MathGame.Button.Dark</item>
    </style>

    <!-- Button styles -->
    <style name="Widget.MathGame.Button.Light" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/cloudflare_orange</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.MathGame.Button.Dark" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/cloudflare_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
